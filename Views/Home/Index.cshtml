@model Tuple<List<Prodotti>, List<Prodotti>, List<Prodotti>>

@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Benvenuto alla Bancarella di Nicolas Cage</h1>
</div>
<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
    <div class="carousel-inner">
        @for (int i = 0; i < Model.Item3.Count; i++)
        {
            <div class="carousel-item @(i == 0 ? "active" : "")">
                <img src="@Model.Item3[i].Image" class="d-block mx-auto" style="height: 200px; object-fit: contain;">
            </div>
        }
    </div>
</div>

@if (Model.Item1.Any())
{
    <div>
        <h2>Ultimi 3 Articoli Arrivati</h2>

        @foreach (var prodotto in Model.Item1.Take(3))
        {
            <div class="prodotto-container">
                <h4>@prodotto.Name</h4>
                <p>@prodotto.Description</p>
                <img src=@prodotto.Image alt="Immagine del prodotto" style="max-width: 300px;">
                <p>€@(prodotto.Price.ToString("0.00"))</p>
                <a class="nav-link text-red btn-btn" asp-controller="Prodotti" asp-action="Details" asp-route-id="@prodotto.Id">Scopri</a>
            </div>
        }
    </div>
}
else
{
    <div>
        <h2>Non abbiamo niente</h2>
    </div>
}

<br><br><br>

@if (Model.Item2.Any())
{
    <div>
        <h2>Prossimi Articoli In Arrivo</h2>

        @foreach (var prodotto in Model.Item2)
        {
            <div class="prodotto-container">
                <h4>@prodotto.Name</h4>
                <p>@prodotto.Description</p>
                <img src=@prodotto.Image alt="Immagine del prodotto" style="max-width: 300px;">
                <p>Data di uscita: @prodotto.ReleaseDate.ToShortDateString()</p>
            </div>
        }
    </div>
}
else
{
    <div>
        <h2>Nessun Articolo In Arrivo</h2>
    </div>
}

<style>
    .carousel {
        margin-top: 50px;
        height: 230px;
    }
    .carousel-item {
        height: 200px;
    }
    .carousel-item img {
        height: 100%;
        width: auto;
        object-fit: contain;
        margin: auto;
    }
    .btn-btn {
        display: inline-block;
        width: 80px;
        padding: 5px 5px;
        background-color: #ff7b00; 
        color: #fff; 
        text-align: center;
        text-decoration: none;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }
    .prodotto-container {
        margin: 20px 0;
    }
    .prodotto-container img {
        max-width: 300px;
        height: auto;
        margin: auto;
    }
    #password-form {
            text-align: center;
            margin-bottom: 20px;
        }

        #password-input {
            padding: 10px;
            font-size: 16px;
            border: 2px solid #ccc;
            border-radius: 5px;
        }

        #password-form button {
            padding: 10px 20px;
            font-size: 16px;
            color: #fff;
            background-color: #ff7b00;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        #password-form button:hover {
        }

        #games {
            text-align: center;
        }

        #games button {
            padding: 10px 20px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin: 5px;
        }

        #games button:hover {
            opacity: 0.8;
        }

        #game1-button {
            background-color: #ff0000;
            color: #fff;
        }

        #game2-button {
            background-color: #00ff00;
            color: #000;
        }

        iframe {
            display: none;
            margin-top: 20px;
            border: 2px solid #ccc;
            border-radius: 10px;
        }

        .iframe-container {
            display: flex;
            justify-content: center;
            width: 100%;
        }
</style>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

<div id="password-form">
    <label for="password-input">Area riservata:</label>
    <input type="password" id="password-input">
    <button onclick="checkPassword()">Invio</button>
</div>

<div id="games" style="display: none;">
    <button id="game1-button" onclick="showGame('game1')">Mario</button>
    <button id="game2-button" onclick="showGame('game2')">Tetris</button>
    <button onclick="resetPassword()">Nascondi</button> 

    <div class="iframe-container">
        <iframe id="game1" src="" height="500" width="1300"></iframe>
        <iframe id="game2" src="" height="600" width="728"></iframe>
    </div>
</div>

<script>
    function resetPassword() {
        const game1 = document.getElementById('game1');
        const game2 = document.getElementById('game2');

        // Set Mario game to be displayed
        game1.src = "https://supermario-game.com/mario-game/mario.html";
        game1.style.display = 'block';
        game2.style.display = 'none';
        game2.src = "";

        // Hide password form and games after displaying Mario
        document.getElementById('password-form').style.display = 'block';
        document.getElementById('games').style.display = 'none';
        document.getElementById('password-input').value = ''; // Clear password input
    }

    function checkPassword() {
        const password = document.getElementById('password-input').value;
        if (password === 'arcade') {
            document.getElementById('password-form').style.display = 'none';
            document.getElementById('games').style.display = 'block';
        }
    }

    function showGame(gameId) {
        const game1 = document.getElementById('game1');
        const game2 = document.getElementById('game2');

        if (gameId === 'game1') {
            game1.src = "https://supermario-game.com/mario-game/mario.html";
            game1.style.display = 'block';
            game2.style.display = 'none';
            game2.src = "";
        } else if (gameId === 'game2') {
            game2.src = "https://ytiurin.github.io/tetris/";
            game2.style.display = 'block';
            game1.style.display = 'none';
            game1.src = "";
        }
    }
</script>

