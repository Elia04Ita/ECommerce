@model Bernardi.Luca._5H.Ecommerce.Models.Utenti
@{
    ViewData["Title"] = "Accesso";
}

<style>
    
    .small-textbox {
        width: 200px;
    }
    .small-button {
        width: 100px; 
        margin-top: 10px;
    }
</style>

<div>
    <h1 class="display-4">Accesso</h1>
    <form asp-action="LogIn" method="post">
        <div class="form-group">
            <label for="nickname">Nickname</label>
            <input type="text" class="form-control small-textbox" id="nickname" name="Nickname">
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control small-textbox" id="password" name="Password">
        </div>
        <button type="submit" class="form-control small-button">Accedi</button>
    </form>
</div>

<div>
    <form asp-controller="Utenti" asp-action="Create" method="get">
        <button type="submit" class="form-control small-button">Registrati</button>
    </form>
</div>
